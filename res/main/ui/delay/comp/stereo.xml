<plugin resizable="true">
	<hbox spacing="4">
		<grid rows="1" cols="5" transpose="true" hspacing="4" vspacing="4">
			<group text="groups.signal" width.min="148" expand="true">
				<grid rows="4" cols="2" spacing="4">
					<label text="labels.signal.dry" width="60"/>
					<label text="labels.signal.wet" width="60"/>
					<knob id="dry"/>
					<knob id="wet"/>
					<value id="dry" sline="true"/>
					<value id="wet" sline="true"/>
					<button id="mode" text="labels.mode" ui:inject="Button_Text" led="true"/>
					<button id="ramp" text="labels.ramp" ui:inject="Button_Text" led="true"/>
				</grid>
			</group>
			<ui:attributes ui:recursion="-1" bright="(:mode ieq 0) ? 1.0 : 0.75" ibg.bright="(:mode ieq 0) ? 1.0 : 0.85">
				<group text="groups.samples" width.min="85" expand="true">
					<vbox spacing="4">
						<label text="labels.units.samples"/>
						<knob id="samp"/>
						<value id="samp" sline="true"/>
						<hbox fill="false" spacing="4">
							<led id="mode" key="0" size="10"/>
							<label text="labels.active"/>
						</hbox>
					</vbox>
				</group>
			</ui:attributes>
			<ui:attributes ui:recursion="-1" bright="(:mode ieq 1) ? 1.0 : 0.75" ibg.bright="(:mode ieq 1) ? 1.0 : 0.85">
				<group text="groups.distance" expand="true">
					<grid rows="4" cols="3" spacing="4">
						<label text="labels.units.meters" width="74"/>
						<label text="labels.units.centimeters" width="74"/>
						<label text="labels.temperature" width="74"/>
						<knob id="m"/>
						<knob id="cm"/>
						<knob id="t" balance="0.5"/>
						<value id="m" sline="true"/>
						<value id="cm" sline="true"/>
						<value id="t" sline="true"/>
						<cell cols="4">
							<hbox fill="false" spacing="4">
								<led id="mode" key="1" size="10"/>
								<label text="labels.active"/>
							</hbox>
						</cell>
					</grid>
				</group>
			</ui:attributes>
			<ui:attributes ui:recursion="-1" bright="(:mode ieq 2) ? 1.0 : 0.75" ibg.bright="(:mode ieq 2) ? 1.0 : 0.85" >
				<group text="groups.time" expand="true">
					<vbox spacing="4">
						<label text="labels.delay"/>
						<knob id="time"/>
						<value id="time" sline="true"/>
						<hbox fill="false" spacing="4">
							<led id="mode" key="2" size="10"/>
							<label text="labels.active"/>
						</hbox>
					</vbox>
				</group>
			</ui:attributes>
			<group text="groups.monitoring" expand="true">
				<grid rows="3" cols="2" spacing="4">
					<label text="labels.time_:ms" hfill="true" htext="-1"/>
					<align halign="1">
						<indicator id="d_t" format="f6.2!" text.color="ind_text"/>
					</align>
					<label text="labels.samples:samp" hfill="true" htext="-1"/>
					<align halign="1">
						<indicator id="d_s" format="i6." text.color="ind_text"/>
					</align>
					<label text="labels.distance:cm" hfill="true" htext="-1"/>
					<align halign="1">
						<indicator id="d_d" format="f6.1!" text.color="ind_text"/>
					</align>
				</grid>
			</group>
		</grid>
		<group text="groups.output" text.show="false" expand="true">
			<vbox spacing="4">
				<label text="labels.output"/>
				<knob id="g_out" size="24"/>
				<value id="g_out"/>
			</vbox>
		</group>
	</hbox>
</plugin>
